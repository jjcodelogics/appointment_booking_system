#Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD="a_strong_password_here"
DB_HOST=localhost
DB_DIALECT=postgres # or mysql, sqlite, etc.
DATABASE_URL=postgres://user:password@host:port/dbname # full connection string (optional, but good practice)
DB_PORT=5432 # common default for postgres

#Session Configuration
SESSION_SECRET=a_long_random_string_of_characters_for_security

#Server Configuration
FRONTEND_URL=http://localhost:3000
BASE_URL=http://localhost:8080
PORT=8080 # or 3000, 5000, etc. - the port the backend server listens on
API_BASE_URL=/api/v1 # e.g., for internal routing within the app

#Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587 # or 465 for secure
EMAIL_USER=your_email_username_or_address
EMAIL_PASS="your_email_password_or_app_key"
EMAIL_FROM="App Name <no-reply@app.com>"