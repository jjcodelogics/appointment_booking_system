# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=appointment_booking
DB_NAME_TEST=appointment_booking_test

# Production Database (if different)
PROD_DB_USER=postgres
PROD_DB_PASSWORD=your_prod_password_here
PROD_DB_NAME=appointment_booking_prod
PROD_DB_HOST=your_prod_host_here

# Session Secret (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Node Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# SMTP Configuration (for email reminders)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Server Port
PORT=3000
